<%- include('../partials/head'); %>
    <title>Home Page</title>
    <style>
        body {
          margin: 0;
          font-family: Arial, sans-serif;
          height: 100vh;
          display: flex;
          flex-direction: column;
        }
    
        .top-right {
          position: absolute;
          top: 20px;
          right: 20px;
        }
    
        .top-right img {
          width: 40px;
          height: 40px;
          border-radius: 50%;
          cursor: pointer;
        }
    
        .center-container {
          flex: 1;
          display: flex;
          align-items: center;
          justify-content: center;
          flex-direction: column;
        }
    
        table {
          border: 1px solid black ;
          border-collapse: collapse;
          width: 400px;
          text-align: center;
        }
    
        th {
          background-color: #f2f2f2;
          font-size: 20px;
          padding: 15px;
        }
    
        td {
          padding: 12px;
          border-bottom: 1px solid #ddd;
          cursor: pointer;
          transition: background-color 0.2s;
        }
    
        tr:hover td {
          background-color: #f0f0f0;
        }
    
        a.row-link {
          color: inherit;
          text-decoration: none;
          display: block;
        }
      </style>
    </head>
    <body>
      <!-- Profile picture top-right -->
      <div class="top-right">
        <a href="profile.ejs">
          <img src="https://via.placeholder.com/40" alt="Profile" />
        </a>
      </div>
    
      <!-- Centered table -->
      <div class="center-container">
        <table>
          <thead>
            <tr>
              <th colspan="1">Available Rooms</th>
            </tr>
          </thead>
          <tbody>
            <tr><td><a class="row-link" href="/lobby/Room1">Room 1</a></td></tr>
            <tr><td><a class="row-link" href="/lobby/Room2">Room 2</a></td></tr>
            <tr><td><a class="row-link" href="/lobby/Room3">Room 3</a></td></tr>
            <tr><td><a class="row-link" href="/lobby/Room4">Room 4</a></td></tr>
            <tr><td><a class="row-link" href="/lobby/Room5">Room 5</a></td></tr>
          </tbody>
        </table>
      </div>
    </body>
</html>

